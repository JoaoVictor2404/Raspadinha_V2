{
  "name": "ludix",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"pnpm:dev:server\" \"pnpm:dev:client\"",
    "dev:server": "cross-env NODE_ENV=development tsx server/index.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "build": "vite build --config client/vite.config.ts",
    "start": "cross-env NODE_ENV=production tsx server/index.ts",
    "db:push": "drizzle-kit push",
    "seed": "tsx server/seed.ts",
    "check": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "express-mysql-session": "^3.0.2",
    "express-session": "^1.17.3",
    "mysql2": "^3.11.3"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1"
  }
}
